<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Web Automation Training - Travelocity Test"
	verbose="1">

	<listeners>
		<listener class-name="com.globant.web.listeners.Listener"></listener>
	</listeners>

	<parameter name="browser" value="chrome"></parameter>
	<parameter name="url" value="https://www.travelocity.com"></parameter>

	<test name="Booking a Flight till payment page">
		<classes>
			<class name="com.globant.web.tests.FlightsTest"></class>
		</classes>
	</test>

	<test name="Search a Flight + Hotel + Car">
		<classes>
			<class name="com.globant.web.tests.PackageFlightHotelCarTest"></class>
		</classes>
	</test>
	<test name="Search a Flight + Partial Hotel">
		<classes>
			<class
				name="com.globant.web.tests.PackageFlightPartialHotelTest"></class>
		</classes>
	</test>

	<test name="Search Hotel by Name">
		<classes>
			<class name="com.globant.web.tests.SearchHotelTest"></class>
		</classes>
	</test>
	<test name="Get Hotel Member Discount Banner">
		<classes>
			<class name="com.globant.web.tests.HotelsMemberDiscountTest"></class>
		</classes>
	</test>

	<test name="Search a Cruise">
		<classes>
			<class name="com.globant.web.tests.CruisesTest"></class>
		</classes>
	</test>

</suite>