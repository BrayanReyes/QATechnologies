<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Test ESPN" verbose="1">
	<listeners>
		<listener class-name="org.espnSuite.web.listeners.Listener"></listener>
	</listeners>
	
	<parameter name="browser" value="chrome"></parameter>
	<parameter name="url"	value="https://www.booking.com/index.es.html"></parameter>
	<parameter name="homePageTitle" value="ESPN: Serving sports fans. Anytime. Anywhere."></parameter>

	<test name="Log In Test ESPN Web Page">
		<groups>
			<run>
				<include name="LogInGroup"></include>
			</run>
		</groups>
		<classes>
			<class name="org.espnSuite.web.tests.ESPNTest"></class>
		</classes>
	</test>
	
	<test name="Log Out Test ESPN Web Page">
		<groups>
			<run>
				<include name="LogOutGroup"></include>
			</run>
		</groups>
		<classes>
			<class name="org.espnSuite.web.tests.ESPNTest"></class>
		</classes>
	</test>

	<test name="Delete Account Test ESPN Web Page">
		<groups>
			<run>
				<include name="DeleteAccountGroup"></include>
			</run>
		</groups>
		<classes>
			<class name="org.espnSuite.web.tests.ESPNTest"></class>
		</classes>
	</test>
	
</suite>